{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "CommonJS",
    "target": "es2016",
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "test-setup.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/main.ts",
    "src/**/*.module.ts"
  ]
}